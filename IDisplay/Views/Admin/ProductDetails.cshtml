@*@using IDisplay.Models*@
@model IEnumerable<IDisplay.Models.Product>
@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>ProductDetails</h2>

<table class="table">

    <th>Product Name</th>
<th>Product Description</th>
<th>Product Price</th>
<th>image</th>

    @foreach (var item in ViewBag.ProductList)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.ProductDescription</td>
            <td>@item.ProductPrice</td>
            <td><img src="../Content/Images/ItemImages/@item.ImageUrl" width="50px" height="50px"></td>
      

            @*<td><a href="CategoryDelete?id=@item.ProductCategoryId" class="btn btn-danger" >Delete</a></td>*@
        </tr>
    }
</table>